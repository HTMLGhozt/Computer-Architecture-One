{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "amd": true,
    "browser": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", { "allow": ["info", "error"] }], 
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-bitwise": 0
  }
}